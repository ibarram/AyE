CC = gcc
LIB = libreria
001 = 001_seno_serie_ini
002 = 002_seno_serie_conv
003 = 003_seno_serie_opt
004 = 004_main_argumentos
005 = 005_seno_serie_par
006 = 006_seno_serie_par_f
007 = 007_billetes
008 = 008_cuatro
009 = 009_mochila
010 = 010_Fibonacci
011 = 011_Fibonacci

all: $(001) $(002) $(003) $(004) $(005) $(006) $(007) $(008) $(009) $(010) $(011)

$(001): $(001).c
	$(CC) $(001).c -o $(001)

$(002): $(002).c
	$(CC) $(002).c -o $(002)

$(003): $(003).c
	$(CC) $(003).c -o $(003)

$(004): $(004).c
	$(CC) $(004).c -o $(004)

$(005): $(005).c
	$(CC) $(005).c -o $(005)

$(006): $(006).c
	$(CC) $(006).c -o $(006)

$(007): $(007).c
	$(CC) $(007).c -o $(007)

$(008): $(008).c
	$(CC) $(008).c -o $(008)

$(009): $(009).c
	$(CC) $(009).c -o $(009)

$(010): $(010).c
	$(CC) $(010).c -o $(010)

$(LIB).o: $(LIB).c
	$(CC) -c $(LIB).c -o $(LIB).o

$(LIB).a: $(LIB).o
	ar rcs lib$(LIB).a $(LIB).o

$(011): $(011).c $(LIB).a
	$(CC) $(011).c -L. -l$(LIB) -o $(011)

clean:
	rm -f $(001) $(002) $(003) $(004) $(005) $(006) $(007) $(008) $(009) $(010) $(011) $(LIB).o lib$(LIB).a
